<mapper namespace="ssm.dao.RoleMenuDao">

    <select id="getMenusByRoleId" resultType="ssm.domain.RoleMenu">
        select * from role_menu where roleid=#{roleId}
    </select>

<!--    <select id="getRoleMenuByMenuId" resultType="ssm.domain.RoleMenu">-->
