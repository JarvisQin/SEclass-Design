    <delete id="deleteMenusByRoleId">
        delete from role_menu where roleId=#{roleId}
    </delete>

    <insert id="addRoleMenu" parameterType="ssm.domain.RoleMenu">
    insert into role_menu (menuId,roleId) values (#{menuId},#{roleId})
    </insert>

